# Database Configuration
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# MinIO Configuration
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=
MINIO_BUCKET=mankahi-uploads
MINIO_REGION=us-east-1

# Elasticsearch Configuration
ELASTIC_PASSWORD=
ELASTICSEARCH_INDEX=mankahi-blogs
ELASTICSEARCH_INDEX_SHARDS=3
ELASTICSEARCH_INDEX_REPLICAS=1

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
API_BASE_URL=https://api.mankahi.com
AUTH_SERVICE_URL=http://auth-service:3001
BLOG_SERVICE_URL=http://blog-service:3002
ANALYTICS_SERVICE_URL=http://analytics-service:3003
ADMIN_SERVICE_URL=http://admin-service:3004

# CORS Configuration
CORS_ORIGIN=https://mankahi.com

# Rate Limiting
API_RATE_LIMIT_WINDOW=900
API_RATE_LIMIT_MAX=100
ADMIN_RATE_LIMIT_WINDOW=900000
ADMIN_RATE_LIMIT_MAX=100

# Cache TTLs (in seconds)
BLOG_CACHE_TTL=3600
SEARCH_CACHE_TTL=300
ANALYTICS_CACHE_TTL=60

# File Upload Limits
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/mankahi.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/mankahi.com.key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_RATE_LIMITING=true
ENABLE_IP_FILTERING=true
ALLOWED_IPS=
