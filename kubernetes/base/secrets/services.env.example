# Database
DATABASE_URL=postgresql://postgres:change_this_password@postgres-service:5432/mankahi

# JWT
JWT_SECRET=change_this_secret_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_this_refresh_secret
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://api.mankahi.local/auth/google/callback

# Redis
REDIS_PASSWORD=change_this_redis_password

# Admin Service
ADMIN_API_KEY=change_this_admin_key

# Rate Limiting
RATE_LIMIT_SECRET=change_this_rate_limit_secret

# Session
SESSION_SECRET=change_this_session_secret

# Elasticsearch
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=change_this_elastic_password

# MinIO (for image storage)
MINIO_ACCESS_KEY=change_this_minio_access_key
MINIO_SECRET_KEY=change_this_minio_secret_key
MINIO_ENDPOINT=minio-service:9000
MINIO_BUCKET=mankahi-images

# Monitoring
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password
PROMETHEUS_BASIC_AUTH_USER=admin
PROMETHEUS_BASIC_AUTH_PASS=change_this_prometheus_password
