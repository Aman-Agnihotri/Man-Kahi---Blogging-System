{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["blog-service/src/*"],
      "@config/*": ["blog-service/src/config/*"],
      "@utils/*": ["blog-service/src/utils/*"],
      "@controllers/*": ["blog-service/src/controllers/*"],
      "@middlewares/*": ["blog-service/src/middlewares/*"],
      "@types/*": ["blog-service/src/types/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
