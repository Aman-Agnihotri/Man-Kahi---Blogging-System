# Server
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mankahi_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=86400 # 24 hours in seconds

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""
ELASTICSEARCH_INDEX_SHARDS=3
ELASTICSEARCH_INDEX_REPLICAS=1

# JWT
JWT_SECRET="your-secret-key-at-least-32-chars"

# Storage
STORAGE_PATH="uploads"
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW=900 # 15 minutes in seconds
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000" # Frontend URL

# Service URLs
AUTH_SERVICE_URL="http://localhost:3001"
BLOG_SERVICE_URL="http://localhost:3002"

# Caching
BLOG_CACHE_TTL=3600 # 1 hour in seconds
SEARCH_CACHE_TTL=300 # 5 minutes in seconds
ANALYTICS_CACHE_TTL=60 # 1 minute in seconds
