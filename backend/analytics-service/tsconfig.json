{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["analytics-service/src/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["analytics-service/src/config/*"],
      "@controllers/*": ["analytics-service/src/controllers/*"],
      "@routes/*": ["analytics-service/src/routes/*"],
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
