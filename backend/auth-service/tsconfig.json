{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["auth-service/src/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["auth-service/src/config/*"],
      "@controllers/*": ["auth-service/src/controllers/*"],
      "@middlewares/*": ["auth-service/src/middlewares/*"],
      "@routes/*": ["auth-service/src/routes/*"],
      "@services/*": ["auth-service/src/services/*"],
      "@utils/*": ["auth-service/src/utils/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
